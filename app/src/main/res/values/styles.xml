<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Widget.MyApp.IconOnlyButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@drawable/icon_button_bg</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:tint">@color/on_button_text</item>

        <item name="android:padding">0dp</item>
    </style>
    <style name="Widget.MyApp.FAB" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.MyApp.Circle</item>
        <item name="backgroundTint">@color/fab</item>
        <item name="tint">@android:color/white</item>
    </style>
    <!-- Circle shape -->
    <style name="ShapeAppearance.MyApp.Circle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    <style name="InfoTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/info_text</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>
    <style name="FullScreenDialog" parent="Theme.Material3.Light.Dialog">
        <!-- Make the dialog fill the screen -->
        <item name="android:windowIsFloating">false</item>
        <!-- Transparent so we can show our overlay color -->
        <item name="android:windowBackground">@color/info_bg</item>
    </style>
    <style name="NoteTextAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/hint</item>
        <item name="android:textSize">@dimen/note_text_size</item>
    </style>
    <style name="Discard" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/discard</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>